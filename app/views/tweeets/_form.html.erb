<%= simple_form_for(@tweeet) do |form| %>
  <%= form.error_notification%>
  <div class="field">
    <div class="control">
      <%= form.input :tweeet, label: "Tweeet about it", input_html: {class: "textarea"},
        wrapper: false, label_html: { class: "label" }, placeholder: "Compose a new tweeet" %>
    </div>
  </div>
  <%= form.button :submit, class: "button is-info" %>
<% end %>